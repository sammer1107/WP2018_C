{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "js/dist"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "npm run build:dev"
  },
  "watch": [
    "js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json"
}